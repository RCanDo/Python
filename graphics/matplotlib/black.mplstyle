## import matplotlib as mpl
## mpl.rcParams
##

figure.facecolor : black
axes.facecolor : black
axes.edgecolor : lightgray
axes.labelcolor : lightgray
grid.color : darkgray           # #b0b0b0
hatch.color : lightgray
lines.color: yellow       #C0
patch.edgecolor : lightgray
patch.facecolor : yellow
savefig.facecolor : black
savefig.edgecolor : lightgray

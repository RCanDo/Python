xtick.color : lightgray
ytick.color : lightgray



axes.titlesize : large    ##24
axes.labelsize : medium   ##20
axes.xmargin : .01
axes.ymargin : .01

grid.alpha : 0.5
grid.linestyle : -

lines.linewidth : 1       #1.5
lines.markersize : 1      #6.0

xtick.labelsize : medium  ##16
ytick.labelsize : medium  ##16

